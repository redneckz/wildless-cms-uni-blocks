{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "ESNext",
    "jsx": "react-jsx",
    "jsxImportSource": "@redneckz/uni-jsx",
    "allowJs": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib",

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": false,
    "alwaysStrict": false,

    /* Module Resolution Options */
    "rootDir": "src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    /* Advanced Options */
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts*"],
  "exclude": ["./src/**/*.spec.ts*", "./src/**/*fixture.ts*", "./src/cosmos.*"]
}
