{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "CommonJS",
    "allowJs": true,
    "lib": ["ESNext"],
    "types": ["node"],
    "declaration": true,
    "sourceMap": false,
    "outDir": "./dist",

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": false,
    "alwaysStrict": false,

    /* Module Resolution Options */
    "rootDir": "src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    /* Advanced Options */
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"]
}
