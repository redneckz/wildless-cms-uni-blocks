{
  "name": "@redneckz/wildless-cms-uni-blocks",
  "version": "0.2.45",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./dist/index.js",
      "types": "./lib/index.d.ts"
    },
    "./lib/*.js": {
      "import": "./lib/*.js",
      "require": "./dist/*.js",
      "types": "./lib/*.d.ts"
    },
    "./lib/Header": {
      "import": "./lib/Header/index.js",
      "require": "./dist/Header/index.js",
      "types": "./lib/Header/index.d.ts"
    },
    "./lib/Header/*.js": {
      "import": "./lib/Header/*.js",
      "require": "./dist/Header/*.js",
      "types": "./lib/Header/*.d.ts"
    },
    "./lib/common.css": "./lib/common.css",
    "./fonts/ubuntu/*": "./fonts/ubuntu/*",
    "./lib/content-page-repository": {
      "import": "./lib/content-page-repository/index.js",
      "require": "./dist/content-page-repository/index.js",
      "types": "./lib/content-page-repository/index.d.ts"
    },
    "./lib/content-page-repository/*.js": {
      "import": "./lib/content-page-repository/*.js",
      "require": "./dist/content-page-repository/*.js",
      "types": "./lib/content-page-repository/*.d.ts"
    },
    "./lib/utils/*.js": {
      "import": "./lib/utils/*.js",
      "require": "./dist/utils/*.js",
      "types": "./lib/utils/*.d.ts"
    },
    "./*.json": "./*.json",
    "./*.js": "./*.js",
    "./*.cjs": "./*.cjs"
  },
  "files": [
    "lib",
    "dist",
    "fonts"
  ],
  "author": {
    "name": "redneckz",
    "email": "vasyaselsky@yandex.ru"
  },
  "repository": {
    "url": "https://github.com/redneckz/wildless-cms-uni-blocks.git"
  },
  "bugs": {
    "url": "https://github.com/redneckz/wildless-cms-uni-blocks/issues"
  },
  "scripts": {
    "build": "rimraf ./lib && tsc --build --verbose && npm run build:commonjs && npm run build:style",
    "build:commonjs": "rimraf ./dist && tsc --module commonjs --noImplicitUseStrict --outDir dist",
    "build:style": "postcss './src/**/*.css' --env production --dir ./lib",
    "postbuild:style": "npm run size",
    "postbuild": "replace-in-file --configFile=replace-config.cjs --verbose",
    "size": "size-limit",
    "test": "jest --coverage",
    "cosmos": "cosmos",
    "cosmos:export": "cosmos-export",
    "prepare": "husky install || exit 0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "dependencies": {
    "@redneckz/uni-jsx": "^0.1.6",
    "glob": "^8.0.3",
    "remark-html": "^15.0.1",
    "remark-parse": "^10.0.1",
    "sharp": "^0.30.6",
    "unified": "^10.1.2"
  },
  "devDependencies": {
    "@size-limit/file": "^7.0.8",
    "@types/jest": "^28.1.1",
    "autoprefixer": "^10.4.7",
    "css-loader": "^6.7.1",
    "cssnano": "^5.1.11",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "lint-staged": "^13.0.1",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "postcss-loader": "^7.0.0",
    "prettier": "2.6.2",
    "react-cosmos": "^5.7.2",
    "replace-in-file": "^6.3.5",
    "rimraf": "^3.0.2",
    "size-limit": "^7.0.8",
    "style-loader": "^3.3.1",
    "tailwindcss": "^3.1.1",
    "ts-jest": "^28.0.4",
    "ts-loader": "^9.3.0",
    "typescript": "^4.7.3",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.9.2"
  },
  "size-limit": [
    {
      "limit": "7 kB",
      "path": "lib/common.css"
    }
  ],
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,css}": "prettier --write",
    "src/**/*.{js,jsx,ts,tsx,css,json}": [
      "cosmos-export",
      "git add ./docs"
    ]
  }
}
