{
  "name": "@redneckz/wildless-cms-uni-blocks",
  "version": "0.2.32",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./dist/index.js",
      "types": "./lib/index.d.ts"
    },
    "./lib/*.js": {
      "import": "./lib/*.js",
      "require": "./dist/*.js",
      "types": "./lib/*.d.ts"
    },
    "./lib/common.css": "./lib/common.css",
    "./lib/content-page-repository": {
      "import": "./lib/content-page-repository/index.js",
      "require": "./dist/content-page-repository/index.js",
      "types": "./lib/content-page-repository/index.d.ts"
    },
    "./lib/content-page-repository/*.js": {
      "import": "./lib/content-page-repository/*.js",
      "require": "./dist/content-page-repository/*.js",
      "types": "./lib/content-page-repository/*.d.ts"
    },
    "./*.json": "./*.json",
    "./*.js": "./*.js",
    "./*.cjs": "./*.cjs"
  },
  "files": [
    "lib",
    "dist"
  ],
  "author": {
    "name": "redneckz",
    "email": "vasyaselsky@yandex.ru"
  },
  "repository": {
    "url": "https://github.com/redneckz/wildless-cms-uni-blocks.git"
  },
  "bugs": {
    "url": "https://github.com/redneckz/wildless-cms-uni-blocks/issues"
  },
  "scripts": {
    "build": "rimraf ./lib && tsc --build --verbose && npm run build:commonjs && npm run build:style",
    "postbuild": "replace-in-file --configFile=replace-config.cjs --verbose",
    "build:commonjs": "rimraf ./dist && tsc --module commonjs --noImplicitUseStrict --outDir dist",
    "build:style": "postcss './src/**/*.css' --env production --dir ./lib",
    "test": "jest --coverage",
    "cosmos": "cosmos",
    "cosmos:export": "cosmos-export",
    "prepare": "husky install"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "dependencies": {
    "@redneckz/uni-jsx": "^0.1.6",
    "glob": "^8.0.1",
    "remark-html": "^15.0.1",
    "remark-parse": "^10.0.1",
    "sharp": "^0.30.4",
    "unified": "^10.1.2"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "autoprefixer": "^10.4.4",
    "css-loader": "^6.7.1",
    "cssnano": "^5.1.7",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "jest": "^27.5.1",
    "lint-staged": "^12.4.2",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "postcss-loader": "^6.2.1",
    "prettier": "2.6.2",
    "react-cosmos": "^5.7.2",
    "replace-in-file": "^6.3.2",
    "rimraf": "^3.0.2",
    "style-loader": "^3.3.1",
    "tailwindcss": "^3.0.24",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.3",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,css}": "prettier --write",
    "src/**/*.{js,jsx,ts,tsx,css,json}": ["cosmos-export", "git add ./docs"]
  }
}
